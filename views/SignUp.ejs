<body>
    <div id="google_translate_element"></div>
    <style>
        /* Hide the Google Translate container initially */
        #google_translate_element {
            display: none;
        }
    </style>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'en',
                autoDisplay: false
            }, 'google_translate_element');

            // Hide the translation toolbar after it's loaded
            setTimeout(function() {
                const iframe = document.querySelector('iframe.skiptranslate');
                if (iframe) {
                    iframe.style.display = 'none';
                }
            }, 1000); // Delay to ensure the iframe is loaded
        }
    </script>
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
<style>
*{
font-family: "Roboto",sans-serif;
}
body{
    width: 100%;
    height: 100vh;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.container{
    overflow: hidden;
    margin: 0;
    padding: 0;
    width:100%;
    height: 100dvh;
    padding: 5px;
    background-color: hsl(239, 40%, 20%);
}
.form-con{
    display: flex;
    flex-direction: column;
    justify-content:space-around ;
    width: 100%;
    height: 60vh;
    background-color: hsla(240, 39%, 20%, 0.767);
    font-size: large;
    color: rgb(200, 225,219);
    padding: 10px;
    overflow: hidden;
}
.form-con input{
    padding: 10px;
    border: none;
    margin-bottom:10px;
    border-radius: 2px;
    max-width: 70%;
}
.form-con #submit{
    max-width: 30%;
}
.container h2{
    margin-bottom:2px;
    text-align: center;
    color: rgb(200, 225,219);
}
@media  (min-width:850px){
    .container{
        max-width: 40%;
        max-height: 80vh;
        border-radius: 5px;
        box-shadow: 2px 2px 10px hsla(240, 39%, 20%, 0.767),-2px -2px 10px hsla(240, 39%, 20%, 0.767);
        padding: 10px;
    }
    .form-con input{
        width: 100%;
    }

    body{
        background-color: rgb(200, 225,219);
    }
    a{
        color:rgb(200, 225,219);
        font-size: large;
    }
    a:hover{
        color: red;
    }
}
</style>
<body>
    <div class="container">
        <h2>Sign Up</h2>
    <form method="post" class="form-con" action="/signup">
        <label for="name">Name</label><br>
        <input name="name" required placeholder="Create Username" type="text" id="name" minlength="3"><br>
        <label for="id">Email</label><br>
        <input name="email" required placeholder="Enter Email" type="email" id="id" pattern="[a-z][A-z][1-9]@gmail.com]"><br>
        <label for="pass">Password</label><br>
        <input name="password" required type="password" placeholder="Enter Password" id="pass" minlength="8">
        <p>Already have an account? <a href="/signin">Sign In</a></p>
        <input id="submit" type="submit" value="Submit">
    </form>
    </div>
</body>
</html>