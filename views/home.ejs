    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      #but {
        background-color: #27285c;
        border: none;
        color: rgb(200, 225, 219);
      }
      .dropdown-menu {
        background-color: rgb(200, 225, 219);
        color: #27285c;
      }
      .dropdown-item:hover {
        background-color: #27285c;
        color: rgb(200, 225, 219);
      }
      body {
        font-family: Arial, sans-serif;
        background-color: rgb(200, 225, 219);
        color: #333;
        min-height: 100vh;
      }

      .head {
        color: #27285c;
        background-color: rgb(200, 225, 219);
        padding: 15px 20px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
      }
      .nav {
        gap: 20px;
      }

      .head .nav a {
        color: #c8e1db;
        border: 1px solid #27285c;
        text-decoration: none;
        padding: 10px 15px;
        background-color: #27285c;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .head .nav a:hover {
        background-color: rgb(200, 225, 219);
        color: #27285c;
      }

      .main-con {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        max-width: 1000px;
        margin: 30px auto;
        gap: 20px;
        text-align: center;
        background-color: rgb(200, 225, 219);
        border-radius: 10px;
      }

      .img-con {
        width: 100%;
        max-width: 400px;
      }

      .img-con img {
        width: 100%;
        height: auto;
        border-radius: 10px;
      }
      .dropdown {
        margin-top: 20px;
      }

      @media (min-width: 768px) {
        .main-con {
          text-align: left;
        }

        .img-con {
          flex: 1;
        }

        .dropdown {
          flex: 1;
        }
      }
      img:nth-of-type(3),
      img:nth-of-type(4) {
        transition: transform 0.3s ease;
      }

      img:nth-of-type(3):hover,
      img:nth-of-type(4):hover {
        transform: scale(1.2);
      }

      #search {
        transition: transform 0.3s ease;
      }
      #search:hover {
        transform: scale(1.2);
      }
    </style>
  </head>
  <body>
    <header class="head">
      <nav class="nav">
        <a href="/learnMore">Learn More</a>
        <a href="/signin">Sign In</a>
        <a href="/bot" style="text-align: center">
          <img src="search.png" width="40%" alt="chatbot" id="search" />
        </a>
      </nav>
    </header>
    <main class="main-con">
      <div class="img-con">
        <img id="explore" src="newLogo.jpeg" alt="Placeholder Image" />
      </div>
      <div class="dropdown" id="drop">
        <button
          id="but"
          class="btn btn-primary dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
        >
          SELECT DISTRICT
        </button>
        <ul class="dropdown-menu">
          <li>
            <a class="dropdown-item" href="/trichy"
              >TRICHY
              <img src="explorer.png" alt="explore district" width="20%" />
            </a>
          </li>
          <li>
            <a class="dropdown-item" href="/madurai"
              >MADURAI
              <img src="explorer.png" alt="explore district" width="20%" />
            </a>
          </li>
        </ul>
      </div>
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        let images = document.querySelectorAll("img");

        if (images.length >= 4) {
          let secondImage = images[2];
          let thirdImage = images[3];

          function addHoverEffect(image, newSrc, originalSrc) {
            image.addEventListener("mouseover", function () {
              this.src = newSrc;
            });

            image.addEventListener("mouseout", function () {
              this.src = originalSrc;
            });
          }

          addHoverEffect(secondImage, "explorer2.png", "explorer.png");
          addHoverEffect(thirdImage, "explorer2.png", "explorer.png");
        }
      });

      const image = document.getElementById("search");

      image.addEventListener("mouseover", function () {
        image.src = "search2.png";
      });

      image.addEventListener("mouseout", function () {
        image.src = "search.png";
      });
    </script>
  </body>
</html>
